# NewHTTPS API Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# 部署模式配置
STANDALONE_MODE=true
ENABLE_CERT_APPLY=true
ENABLE_WEB_INTERFACE=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Certd-2 Integration (仅在集成模式下使用)
# CERTD_BASE_URL=http://localhost:7001
# CERTD_TOKEN=your-certd-api-token

# Database Configuration
DATABASE_PATH=./data/newhttps.db

# ACME Configuration (独立模式)
ACME_DATA_DIR=./data/acme
DEFAULT_CA=letsencrypt
DEFAULT_EMAIL=admin@yourdomain.com

# Certificate Storage (独立模式)
CERT_STORAGE_DIR=./data/certificates
ENABLE_AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/api.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*

# Agent Configuration
MAX_AGENTS=100
MAX_CERTIFICATES=1000
AGENT_HEARTBEAT_INTERVAL=300

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# SSL/TLS
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=false

# 通知配置 (可选)
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# Redis 配置 (可选)
# REDIS_URL=redis://localhost:6379

# 高级数据库配置 (可选)
# DATABASE_URL=postgresql://user:pass@localhost:5432/newhttps
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10
